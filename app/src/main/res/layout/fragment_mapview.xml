<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/add_location_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup"
            android:text="Add new location here"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            />
    <ImageButton
        android:id="@+id/add_location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="7dp"
        android:src="@drawable/ic_add_location"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_marker"
        android:background="#99E0E0E0"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/location_action"
        android:background="#AAFAFAFA"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="140dp">
            <id.edutech.baso.mapsproject.SquareImageView
                android:id="@+id/location_photo"
                android:src="@drawable/foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <ProgressBar
                android:id="@+id/location_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="0dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Pantai Losari, Makassar"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/location_distance"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About 3 KM"/>
            <Button
                android:visibility="gone"
                android:id="@+id/btn_direction"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ic_directions"
                android:drawablePadding="5dp"
                android:background="@drawable/button_shape"
                android:text="Get Direction"/>
            <Button
                android:id="@+id/btn_open_location"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ic_direction"
                android:drawablePadding="5dp"
                android:background="@drawable/button_shape"
                android:text="Open Location"/>
            <Button
                android:id="@+id/btn_select_location"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/ic_place_primary"
                android:drawablePadding="5dp"
                android:background="@drawable/button_shape"
                android:text="Select Location"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_location_action"
        android:background="#AAFAFAFA"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/input_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location Name"
                android:maxLines="1"
                android:textColor="#000000"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Select Location Type"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_add_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:text="ADD"
            android:layout_gravity="end"/>
        </LinearLayout>
</RelativeLayout>