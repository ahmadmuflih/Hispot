<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                    <id.edutech.baso.mapsproject.SquareImageView
                        android:id="@+id/foto_review"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <ProgressBar
                        android:id="@+id/progress_review"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:padding="10dp">
                            <TextView
                                android:id="@+id/nama_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baso Ahmad Muflih"
                                android:textColor="#BB000000"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textSize="16sp"/>
                            <RatingBar
                                android:layout_below="@+id/nama_review"
                                android:id="@+id/rating_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="-75dp"
                                android:layout_marginTop="-15dp"
                                android:scaleX="0.4"
                                android:numStars="5"
                                android:stepSize="0.1"
                                android:isIndicator="true"
                                android:scaleY="0.4"/>

                            <TextView
                                android:layout_below="@id/rating_review"
                                android:layout_marginTop="-16dp"
                                android:id="@+id/isi_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Super yummy food, when staying in saner beach hotel, definitely suggest everyone to go to a restaurant called jegeg 5 mins walking from the hotel."
                                android:maxLines="2"
                                android:textStyle="italic"
                                android:ellipsize="end"/>
                            <TextView
                                android:id="@+id/tgl_review"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/nama_review"
                                android:layout_marginTop="4dp"
                                android:text="10 June 2016"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
