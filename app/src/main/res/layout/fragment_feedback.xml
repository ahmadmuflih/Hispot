<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.edutech.baso.mapsproject.OneFragment"
    android:orientation="vertical"
    android:padding="16dp">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="#000000"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/input_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|left"
            android:inputType="textMultiLine|textCapSentences"
            android:hint="Write your suggestion or bug report"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="210dp"
                android:id="@+id/image_screenshot"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/foto"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
            <ImageButton
                android:layout_width="140dp"
                android:layout_height="210dp"
                android:id="@+id/add_screenshot"
                android:src="@drawable/ic_add"
                android:background="#E0E0E0"
                />
        </LinearLayout>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>